{
  "issueKey": "AEP-2",
  "authenticationAPIs": {
    "login": {
      "endpoint": "/api/login",
      "method": "POST",
      "description": "Endpoint to authenticate user and issue JWT token",
      "request": {
        "username": "string",
        "password": "string"
      },
      "response": {
        "token": "string"
      }
    },
    "registration": {
      "endpoint": "/api/register",
      "method": "POST",
      "description": "Endpoint to register new user",
      "request": {
        "username": "string",
        "password": "string",
        "email": "string"
      },
      "response": {
        "message": "string"
      }
    }
  },
  "jwtSessionHandling": {
    "algorithm": "HS256",
    "expiration": "1h"
  },
  "errorHandling": {
    "invalidLogin": {
      "message": "Invalid username or password",
      "status": 401
    }
  },
